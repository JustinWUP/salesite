<%= render 'setting' %>
<h1>Listing Products</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>

<td>
  <b>Title:</b>
  <%= product.title %>
</td>

<td>
  <b>Description:</b>
  <%= product.description %>
</td>

<td>
  <b>Original Price:</b>
  <%= product.origprice %>
</td>

<td>
  <b>Price:</b>
  <%= product.price %>
</td>

<td>
  <b>Image:</b>
  <%= get_image(product.sku) %>
</td>

<td>
  <b>Active:</b>
  <%= product.active %>
</td>

<td>
  <b>Quantity:</b>
  <%= product.quantity %>
</td>

<td>
  <b>Sort:</b>
  <%= product.sort %>
</td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

